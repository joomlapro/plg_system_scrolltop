<?xml version="1.0" encoding="utf-8" ?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>plg_system_scrolltop</name>
	<author>Bruno Batista</author>
	<creationDate>May 2013</creationDate>
	<copyright>Copyright (C) 2013 AtomTech, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bruno@atomtech.com.br</authorEmail>
	<authorUrl>http://www.atomtech.com.br</authorUrl>
	<version>1.0</version>
	<description>PLG_SYSTEM_SCROLLTOP_XML_DESCRIPTION</description>
	<files>
		<filename plugin="scrolltop">scrolltop.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_scrolltop.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_scrolltop.sys.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.plg_system_scrolltop.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.plg_system_scrolltop.sys.ini</language>
	</languages>
	<media destination="plg_system_scrolltop" folder="media">
		<folder>css</folder>
		<filename>index.html</filename>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="template" type="text" size="40" class="inputbox" filter="raw" label="PLG_SYSTEM_SCROLLTOP_FIELD_TEMPLATE_LABEL" description="PLG_SYSTEM_SCROLLTOP_FIELD_TEMPLATE_DESC" />
				<field name="custom_css" type="editor" editor="codemirror|none" buttons="no" label="PLG_SYSTEM_SCROLLTOP_FIELD_CUSTOM_CSS_LABEL" description="PLG_SYSTEM_SCROLLTOP_FIELD_CUSTOM_CSS_DESC" height="500px" rows="20" cols="80" filter="raw" />
			</fieldset>
		</fields>
	</config>
</extension>
